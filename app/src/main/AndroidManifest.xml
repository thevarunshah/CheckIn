<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.thevarunshah.checkin"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register"/>
        <activity
            android:name=".EventsActivity"
            android:label="@string/view_events"/>
        <activity
            android:name=".EventViewActivity"
            android:label="@string/event_view"/>
        <activity
            android:name=".YourEventsActivity"
            android:label="Your Events"/>
        <activity
            android:name=".RegisteredEventViewActivity"
            android:label="Registered Event"/>
        <activity
            android:name=".CreatedEventViewActivity"
            android:label="Created Event"/>
        <activity
            android:name=".AdminCheckInViewActivity"
            android:label="Attendees"/>
    </application>

</manifest>
